{
  "name": "sidechat-mcp",
  "version": "0.1.0",
  "description": "MCP server for sidechat communication between agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sidechat-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --platform=node --format=esm --outfile=dist/bundle.js --banner:js='#!/usr/bin/env node' --external:node:*",
    "watch": "tsc --watch",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "esbuild": "^0.25.11",
    "typescript": "^5.7.2"
  }
}
